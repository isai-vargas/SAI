<!-- res/drawable/button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimaryDark"/> <!-- Color cuando está presionado -->
            <corners android:radius="16dp"/> <!-- Bordes redondeados -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimary"/> <!-- Color de fondo del botón -->
            <corners android:radius="16dp"/> <!-- Bordes redondeados -->
            <stroke android:width="2dp" android:color="?attr/colorPrimary"/> <!-- Borde del botón -->
        </shape>
    </item>
</selector>
