<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SucursalBodega"
    android:gravity="center"
    android:orientation="vertical">

        <TextView
            android:id="@+id/empresatextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="36dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/bienvenidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Bienvenido: "
            android:textAlignment="center"/>
        <TextView

            android:id="@+id/nombreusertexview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:textSize="20dp"
            android:textAlignment="center"/>



            <TextView
                android:id="@+id/texview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_margin="24dp"
                android:text="Por favor seleccionar su SUCURSAL y BODEGA correctas antes de seguir."
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/texview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Sucursal"
                android:textAlignment="center"/>
            <Spinner
                android:id="@+id/sucursalspinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="24dp"/>
            <TextView
                android:id="@+id/texview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Bodega"
                android:textAlignment="center"/>
            <Spinner
                android:id="@+id/bodegaspinner"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                />

            <Button
                android:id="@+id/siguientebutton"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:text="Continuar" />



</LinearLayout>